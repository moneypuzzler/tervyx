{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vera-protocol.org/schemas/simulation.schema.json",
  "title": "VERA Protocol Simulation Schema",
  "description": "Schema for simulation.json files containing Monte Carlo meta-analysis results",
  "type": "object",
  "properties": {
    "seed": {
      "type": "integer",
      "minimum": 1,
      "description": "Random seed used for Monte Carlo simulation"
    },
    "n_draws": {
      "type": "integer", 
      "minimum": 1000,
      "description": "Number of Monte Carlo draws"
    },
    "tau2_method": {
      "type": "string",
      "enum": ["REML", "DL", "ML"],
      "description": "Method for estimating between-study variance (tau²)"
    },
    "delta": {
      "type": "number",
      "description": "Minimally important difference (δ) threshold"
    },
    "P_effect_gt_delta": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Probability that effect > δ"
    },
    "mu_point": {
      "type": "number",
      "description": "Pooled effect size point estimate"
    },
    "mu_CI95": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "95% confidence interval for pooled effect [lower, upper]"
    },
    "mu_se": {
      "type": "number",
      "minimum": 0,
      "description": "Standard error of pooled effect"
    },
    "I2": {
      "type": ["number", "null"],
      "minimum": 0,
      "maximum": 100,
      "description": "I² heterogeneity statistic (percentage)"
    },
    "tau2": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Between-study variance (tau²)"
    },
    "tau": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Between-study standard deviation (tau)"
    },
    "Q": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Cochran's Q statistic"
    },
    "n_studies": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of studies included"
    },
    "environment": {
      "type": "string",
      "description": "Software environment used for computation"
    },
    "policy_fingerprint": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "SHA256 fingerprint of policy configuration"
    },
    "gate_terminated": {
      "type": "boolean",
      "description": "Whether simulation was terminated early due to gate violations"
    },
    "error": {
      "type": "string",
      "description": "Error message if simulation failed"
    }
  },
  "required": [
    "seed",
    "n_draws", 
    "tau2_method",
    "delta",
    "P_effect_gt_delta",
    "policy_fingerprint"
  ],
  "additionalProperties": true
}